<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Contact Tracing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<style>
.form{
    background-color: #503162;
    color: #F5EAF8;
}
.form-body{
    background-color: #333536;
}
</style>  
</head>
  <body>
    <div class="px-5 fs-4 bg-dark text-white d-flex justify-content-between py-3">
        <p class="mb-0">Welcome, <%=username%></p>
        <div class="d-flex">
            <div class="dropdown mx-5">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Dashboard
                </button>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="umessage?user_id=<%= user_id %>&name=<%= username %>">Notifications<%=message%></a></li>
                    <li><a class="dropdown-item" href="personal?user_id=<%= user_id %>&name=<%= username %>">Personal Information</a></li>
                  <li><a class="dropdown-item" href="#">Update Your Account</a></li>
                  <li><a class="dropdown-item" href="#">Delete Your Account</a></li>
                </ul>
              </div>
            <a href="logout" class="mb-0 text-decoration-none text-white bg-success px-5 rounded-pill border-0">Logout</a>
        </div>
    </div>
    <h1 class="mb-0 bg-warning text-danger"><%=message%></h1>
    <h1 class="mb-0 bg-warning text-success"><%=deactive%></h1>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">User Id</th>
            <th scope="col">Name</th>
            <th scope="col">Mobile</th>
            <th scope="col">Email</th>
            <th scope="col">Attempt</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                  <td><%= user.user_id %></td>
                  <td><%= user.name %></td>
                  <td><%= user.mob_num %></td>
                  <td><%= user.email %></td>
                  <td><%= user.attempt %></td>
                  <td><%= user.status %></td>
                  <td>
                    <a href="/deactivate?user_id=<%= user.user_id %>&name=<%= name %>&admin_id=<%=user_id%>">Deactivate</a>
                  </td>
                </tr>
              <% }); %>
        </tbody>
      </table>
    <footer>
      <p class="text-center bg-dark py-3 text-white">Contact Tracing Pvt Ltd</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>